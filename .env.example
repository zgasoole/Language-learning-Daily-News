# Core
TARGET_LANGUAGE=de
CEFR_LEVEL=A1
MAX_ARTICLES_TO_SCAN=8
PROJECT_ROOT=

# Gemini (for rewrite + learning content generation)
GEMINI_API_KEY=your_gemini_key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_FALLBACK_MODELS=gemini-2.5-flash-lite,gemini-2.0-flash,gemini-flash-latest

# Minimal Gmail setup (you can send to yourself)
GMAIL_ADDRESS=you@gmail.com
GMAIL_APP_PASSWORD=your_app_password
EMAIL_TO=you@gmail.com

# Feedback bridge
FEEDBACK_SUBJECT_PREFIX=[LLDN]
FEEDBACK_TOKEN=a_long_random_string
# Default is non-strict sender filtering to avoid missing valid feedback.
FEEDBACK_STRICT_SENDER=0
# Only used when FEEDBACK_STRICT_SENDER=1
FEEDBACK_ALLOWED_SENDERS=

# TTS
TTS_PROVIDER=edge
EDGE_TTS_VOICE=de-DE-KatjaNeural
TTS_STRICT=0

# Optional, comma-separated RSS list override
DE_RSS_URLS=https://www.tagesschau.de/xml/rss2,https://rss.dw.com/rdf/rss-de-all
FR_RSS_URLS=
JA_RSS_URLS=

# Optional if you host mp3 externally
AUDIO_PUBLIC_BASE_URL=

# Optional advanced override (usually no need)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=you@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=you@gmail.com
# IMAP_HOST=imap.gmail.com
# IMAP_PORT=993
# IMAP_USER=you@gmail.com
# IMAP_PASSWORD=your_app_password
# FEEDBACK_EMAIL=you@gmail.com
